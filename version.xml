<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="3.5"
         DefaultTargets="Build"
         xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <!-- Define the values for the version number -->
    <PropertyGroup>
        <VersionMajor>0</VersionMajor>
        <VersionMinor>2</VersionMinor>
        <VersionBuild>1</VersionBuild>
        <VersionRevision>0</VersionRevision>
    </PropertyGroup>
    
    <!-- 
        Define the tag that is used to mark the issues fixed in the next
        version that will be released. This value is used in the main
        build script to change the tag below into one with the version number.
        We store this here so that it's easy to change when we change the
        version number.
    -->
    <PropertyGroup>
        <FixedIn>Next $(VersionMajor).$(VersionMinor).X Release</FixedIn>
    </PropertyGroup>
</Project>